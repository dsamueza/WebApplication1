<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
     @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-mardis">
          
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img src="~/Content/iso_mardis.png" style=" height:60px; padding-bottom:1px" /> </a>
              
                    @Html.ActionLink("MARDIS", "Index", "Home", null, new { @class = "navbar-brand" , @id = "idnav" })
            </div>            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                
                </ul>
            
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       
    </div>

   
    @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script src="~/Content/toaster.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
